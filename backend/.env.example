# Django Settings
DEBUG=True
# CRITICAL: Generate with: python -c 'import secrets; print(secrets.token_urlsafe(50))'
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.development

# Database
DB_NAME=crypto_exchange_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
ACCESS_TOKEN_LIFETIME=60
REFRESH_TOKEN_LIFETIME=10080

# ========== SECURITY SETTINGS ==========
# Cookie Security (Set to True in production for HTTPS-only cookies)
SECURE_COOKIES=False

# CORS Settings
# CRITICAL: Set CORS_ALLOW_ALL_ORIGINS=False in production!
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email (опціонально)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========== PRODUCTION SECURITY CHECKLIST ==========
# Before deploying to production, ensure:
# 1. SECRET_KEY is set to a secure random value (use secrets.token_urlsafe(50))
# 2. DEBUG=False
# 3. SECURE_COOKIES=True (requires HTTPS)
# 4. CORS_ALLOW_ALL_ORIGINS=False
# 5. CORS_ALLOWED_ORIGINS contains only your production domains
# 6. DJANGO_SETTINGS_MODULE=config.settings.production
# 7. Database credentials are secure and rotated
# 8. ALLOWED_HOSTS contains your production domains
